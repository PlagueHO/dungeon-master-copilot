<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     Background="Background.Transparent"
     ThemeContrast="ThemeContrast.Dark">
    <BarBrand Background="Background.Transparent">
        <BarItem>
            <BarLink To="#">
                Dungeon Master Copilot
            </BarLink>
        </BarItem>
    </BarBrand>
     <BarMenu>
        <BarStart>
            <BarItem>
                <BarLink To="showprofile">
                    <BarIcon IconName="IconName.User" />
                    Profile
                </BarLink>
            </BarItem>
            <BarItem>
                <BarDropdown>
                    <BarDropdownToggle>
                        <BarIcon IconName="IconName.Edit" />
                        Character
                    </BarDropdownToggle>
                    <BarDropdownMenu Background="Background.Transparent">
                        <BarDropdownItem To="character/builder">Builder</BarDropdownItem>
                        <BarDropdownItem>Creator</BarDropdownItem>
                    </BarDropdownMenu>
                </BarDropdown>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>
